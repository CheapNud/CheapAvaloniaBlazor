@page "/_cheapblazor/window"
@using Microsoft.AspNetCore.Components
@using Microsoft.Extensions.Logging
@inject ILogger<WindowHost> Logger
@implements IDisposable

@if (_componentType is not null)
{
    <DynamicComponent Type="_componentType" Parameters="_effectiveParameters" />
}
else if (!string.IsNullOrEmpty(_errorMessage))
{
    <p style="color: red; padding: 1rem;">@_errorMessage</p>
}

@code {
    [SupplyParameterFromQuery(Name = "_type")]
    public string? TypeName { get; set; }

    [SupplyParameterFromQuery(Name = "_windowId")]
    public string? WindowId { get; set; }

    private Type? _componentType;
    private string? _errorMessage;
    private Dictionary<string, object>? _effectiveParameters;

    protected override void OnInitialized()
    {
        if (string.IsNullOrEmpty(TypeName))
        {
            _errorMessage = "No component type specified (_type query parameter missing).";
            return;
        }

        var resolvedType = ResolveComponentType(TypeName);

        if (resolvedType is null)
        {
            _errorMessage = $"Component type '{TypeName}' could not be resolved.";
            Logger.LogWarning("WindowHost: failed to resolve component type '{TypeName}'", TypeName);
            return;
        }

        // Validate that the resolved type is actually a Blazor component
        if (!typeof(IComponent).IsAssignableFrom(resolvedType))
        {
            _errorMessage = $"Type '{resolvedType.FullName}' is not a Blazor component (does not implement IComponent).";
            Logger.LogWarning("WindowHost: type '{TypeName}' does not implement IComponent", resolvedType.FullName);
            return;
        }

        _componentType = resolvedType;

        // Pass WindowId as parameter if the component declares it
        if (!string.IsNullOrEmpty(WindowId))
        {
            _effectiveParameters = new Dictionary<string, object> { ["WindowId"] = WindowId };
        }
    }

    private Type? ResolveComponentType(string typeName)
    {
        // Try assembly-qualified name first (fast path)
        var resolvedType = Type.GetType(typeName);
        if (resolvedType is not null) return resolvedType;

        // Fallback: decode and try again, then scan allowed assemblies
        var decodedName = Uri.UnescapeDataString(typeName);
        resolvedType = Type.GetType(decodedName);
        if (resolvedType is not null) return resolvedType;

        // Only scan the entry assembly and assemblies explicitly referenced by it â€”
        // not every assembly in the AppDomain (which would include framework/runtime assemblies).
        var entryAssembly = System.Reflection.Assembly.GetEntryAssembly();
        if (entryAssembly is null) return null;

        // Check entry assembly
        resolvedType = entryAssembly.GetType(decodedName);
        if (resolvedType is not null) return resolvedType;

        // Check referenced assemblies (covers the library's own assembly and user-referenced packages)
        foreach (var assemblyName in entryAssembly.GetReferencedAssemblies())
        {
            try
            {
                var assembly = System.Reflection.Assembly.Load(assemblyName);
                resolvedType = assembly.GetType(decodedName);
                if (resolvedType is not null) return resolvedType;
            }
            catch (Exception ex)
            {
                Logger.LogDebug(ex, "WindowHost: failed to load referenced assembly '{AssemblyName}'", assemblyName.FullName);
            }
        }

        return null;
    }

    public void Dispose() { }
}
