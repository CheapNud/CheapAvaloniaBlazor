<Project Sdk="Microsoft.NET.Sdk.Razor">
  <!--
    WHY Microsoft.NET.Sdk.Razor (not Web)?
    =======================================
    Desktop apps use OutputType=WinExe. The Internal.Assets MSBuild targets that
    register blazor.web.js as a static web asset have Condition="OutputType == Exe"
    so they skip WinExe projects entirely â€” even with Sdk.Web.

    CheapAvaloniaBlazor handles this automatically: BlazorFrameworkExtractor copies
    blazor.web.js from the NuGet cache to wwwroot/_framework/ at runtime, so
    UseStaticFiles() can serve it. No consumer action required.
  -->
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
  </PropertyGroup>

  <!-- Required for Blazor Server without Web SDK -->
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\CheapAvaloniaBlazor.csproj" />
  </ItemGroup>
</Project>
